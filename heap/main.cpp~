#include "Node.h"
#include <iostream>

using namespace std;

void pushNode(Node* head, char* value){
  Node* current = head;
  if(current == NULL){
    head = newNode();
    head->setValue(value);
    Node* tempNode = NULL;
    head->setRight(tempNode);
  }else{
    Node* tempNode = new Node();
    tempNode->setValue(value);
    tempNode->setRight(head);
    head = tempNode;
  }
}
char* popNode(Node* head){
  Node* tempNode = head;
  if(head->getRight() != NULL){
    head = head->getRight();
    return tempNode->getValue();
  }else{
    head = NULL;
    return tempNode->getValue();
  }
}
